{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "prisma", "prisma.config.ts"]
}
